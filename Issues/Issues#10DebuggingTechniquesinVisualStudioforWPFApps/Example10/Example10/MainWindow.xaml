<Window x:Class="Example10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="NumberInput" Width="150" Margin="5"/>
            <Button Content="Double It" Click="Button_Click" Width="100" Margin="5"/>
            <TextBlock x:Name="ResultText" FontSize="16" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
