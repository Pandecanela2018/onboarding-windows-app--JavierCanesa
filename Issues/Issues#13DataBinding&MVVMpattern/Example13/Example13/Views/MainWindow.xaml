<Window x:Class="Example13.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:UsuarioViewModel/>
    </Window.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="Nombre:" />
        <TextBox Text="{Binding Nombre, Mode=TwoWay}" Margin="0,5,0,10"/>

        <TextBlock Text="Edad:" />
        <TextBox Text="{Binding Edad, Mode=TwoWay}" Margin="0,5,0,10"/>
    </StackPanel>
</Window>
