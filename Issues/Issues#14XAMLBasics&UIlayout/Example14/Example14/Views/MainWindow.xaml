<Window x:Class="Example14.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Formulario de Contacto"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#2C3E50" Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <TextBox Width="250" Height="30" Margin="0,5"
                     Background="White" BorderBrush="#BDC3C7"/>

            <TextBox Width="250" Height="30" Margin="0,5"
                     Background="White" BorderBrush="#BDC3C7"/>

            <Button Content="Enviar" Width="100" Height="30"
                    Margin="0,10" Background="#3498DB"
                    Foreground="White" FontWeight="SemiBold"
                    HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
   
</Window>
